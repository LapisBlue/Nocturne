<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40"
      fx:controller="blue.lapis.nocturne.gui.PreferencesController" prefWidth="720" prefHeight="480">
    <SplitPane dividerPositions="0.25, 0.75" VBox.vgrow="ALWAYS">
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <TreeView fx:id="preferencesList" id="preferencesList">
                <TreeItem value="%preferences.accessibility">
                </TreeItem>
            </TreeView>
        </ScrollPane>

        <Pane fx:id="preferencesPage" id="preferencesPage">
            <GridPane id="accessibilityPane" fx:id="accessibilityPane" visible="true">
                <VBox GridPane.rowIndex="0">
                    <CheckBox fx:id="colorblindToggle" id="colorblindToggle" GridPane.columnIndex="0"
                              onAction="#toggleColorblindMode"/>
                    <Text GridPane.columnIndex="1" text="%preferences.colorblind"/>
                </VBox>
            </GridPane>
        </Pane>
    </SplitPane>

    <HBox spacing="10" alignment="BOTTOM_RIGHT">
        <Button fx:id="applyButton" text="%preferences.apply" onAction="#applyPreferences"/>
        <Button fx:id="cancelButton" text="%preferences.cancel" onAction="#closePreferences"/>
        <Button fx:id="okButton" text="%preferences.ok" onAction="#submitPreferences"/>
    </HBox>
</VBox>
